# ============================================
# ADVANCIA PAY LEDGER - Environment Template
# ============================================
# Copy this to .env.development or .env.production
# Update values according to your environment
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
PRODUCTION_FRONTEND_URL=https://advanciapayledger.com
# ============================================
# DEMO MODE (NO DATABASE)
# ============================================
# This demo runs with in-memory storage.
# Do NOT set DATABASE_URL / REDIS_URL for the demo.
# ============================================
# MVP MODE & FEATURE FLAGS
# ============================================
# Set MVP_MODE=true to keep everything “no external services”.
MVP_MODE=true
ENABLE_REDIS=false
ENABLE_QUEUE=false
ENABLE_SOCIAL_MEDIA=true
ENABLE_AI_FEATURES=true
ENABLE_CRYPTO_FEATURES=true
ENABLE_WEB3_AUTH=true
ENABLE_VAULT=false
# ============================================
# SECURITY & AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits
SESSION_SECRET=your-super-secure-session-secret
API_KEY=your-api-key-change-in-production
# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/google/callback
# ============================================
# PAYMENT PROVIDERS
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# NOWPayments
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=
# Alchemy Pay
ALCHEMY_PAY_SECRET=
# Cryptomus
CRYPTOMUS_API_KEY=
CRYPTOMUS_MERCHANT_ID=
